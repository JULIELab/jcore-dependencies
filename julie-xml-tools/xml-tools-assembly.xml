<assembly>
  <id>xml-tools-assembly</id>
  <formats>
  	<format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
    	<outputDirectory>/</outputDirectory>
    	<unpack>true</unpack>
    	<scope>runtime</scope>
    </dependencySet>
   <dependencySet>
    	<outputDirectory>/</outputDirectory>
    	<unpack>true</unpack>
    	<scope>provided</scope>
    </dependencySet>
  </dependencySets>
</assembly>
